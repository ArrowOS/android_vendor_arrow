<resources>
    <!-- Notifications -->   	

    <!-- The color of the material notification background -->
    <color name="notification_material_background_color">@*android:color/background_material_light</color>
    <!-- The color of the legacy notifications with customs backgrounds (gingerbread and lollipop.)
    It's fine to override this color since at that point the shade was dark. -->
    <color name="notification_legacy_background_color">@*android:color/background_material_light</color>
    <!-- The background color of the notification shade -->
    <color name="notification_shade_background_color">@*android:color/background_floating_material_light</color>
    <!-- The color of the material notification background when dimmed -->
    <color name="notification_material_background_dimmed_color">@*android:color/background_material_light</color>
    <!-- The color of the gear shown behind a notification -->
    <color name="notification_gear_color">#6f121217</color>
    <!-- The "inside" of a notification, reached via longpress -->
    <color name="notification_guts_bg_color">@*android:color/background_material_light</color>
    <color name="notification_guts_info_button_color">@*android:color/accent_device_default_light</color>
    <color name="notification_guts_priority_button_content_color_selected">@*android:color/accent_device_default_light</color> 
    <color name="notification_guts_priority_button_bg_fill_color_selected">@*android:color/background_floating_material_light</color>
    <color name="notification_guts_priority_button_bg_stroke_color_selected">@*android:color/accent_device_default_light</color>

    <color name="notification_divider_color">#00ffffff</color>

    <!-- Qs customizer -->
	
    <!-- The color of the background in the top part of QSCustomizer -->
    <color name="qs_customize_background">@*android:color/background_material_light</color>
    <!-- The color of the background in the bottom part of QSCustomizer -->
    <color name="qs_customize_decoration">@*android:color/background_floating_material_light</color>

    <!-- Global Actions (Power Menu) -->	

    <!-- The color of the background in the separated list of the Global Actions menu -->
    <color name="global_actions_separated_background">@*android:color/background_material_light</color>
    <!-- The color of the background in the grid of the Global Actions menu -->
    <color name="global_actions_grid_background">@*android:color/background_material_light</color>
</resources>
